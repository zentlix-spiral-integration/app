{
    "name": "spiral-cms/app",
    "type": "project",
    "license": "MIT",
    "description": "Spiral CMS Skeleton Application",
    "support": {
        "issues": "https://github.com/spiral-cms/app/issues",
        "source": "https://github.com/spiral-cms/app"
    },
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*",
        "doctrine/collections": "^1.6",
        "spiral/cycle-bridge": "^1.0",
        "spiral/framework": "^2.10",
        "spiral/nyholm-bridge": "^1.0",
        "spiral/roadrunner-bridge": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "spiral/testing": "^1.1",
        "vimeo/psalm": "^4.22"
    },
    "scripts": {
        "post-create-project-cmd": [
            "php -r \"copy('.env.sample', '.env');\"",
            "php app.php encrypt:key -m .env",
            "php app.php configure -vv",
            "rr get-binary"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "extra": {
        "publish-cmd": "php app.php publish",
        "branch-alias": {
            "dev-master": "1.4.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
